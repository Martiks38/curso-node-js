extends layout.pug

block content
  section.container
    include header
    div.item
      -let {movie_id, release_year, rating, img} = data
      form.form(method="POST" action=`/actualizar/${movie_id}`)
        fieldset
          div.container.p1
            label.item.i-b.v-top.ph3.p_25.right(for="movie_id") IMDB id:
            input.item.i-b.v-top.ph9.p_25#id(type="text" name="id" value=movie_id disabled required)
            input#movie_id(type="hidden" name="movie_id" value=movie_id)
          div.container.p1
            label.item.i-b.v-top.ph3.p_25.right(for="title") Título:
            input.item.i-b.v-top.ph9.p_25#title(type="text" name="title" value=`${data.title}` required)
          div.container.p1
            label.item.i-b.v-top.ph3.p_25.right(for="release_year") Año:
            input.item.i-b.v-top.ph9.p_25#release_year(type="text" name="release_year" value=release_year required)
          div.container.p1
            label.item.i-b.v-top.ph3.p_25.right(for="rating") Calificación:
            input.item.i-b.v-top.ph9.p_25#rating(type="text" name="rating" value=rating required)
          div.container.p1
            label.item.i-b.v-top.ph3.p_25.right(for="image") Poster:
            input.item.i-b.v-top.ph9.p_25#image(type="text" name="image" value=img required)
          div.container.p1
            input.item.ph4.mauto.button.add(type="submit" value="Enviar")
            input(type="hidden" name="_method" value="PUT")